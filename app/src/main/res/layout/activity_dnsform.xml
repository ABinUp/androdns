<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dnsform"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="androdns.android.leetdreams.ch.androdns.DNSFormActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="QNAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblQNAME"
            android:contentDescription="www.example.com" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtQname"
            android:hint="www.example.com" />

        <TextView
            android:text="Server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblServer" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtServerName"
            android:hint="DNS server, leave empty for system resolver" />

        <TextView
            android:text="QTYPE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblQtype" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerKnownTypes"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtQTYPE"
                android:layout_weight="1"
                android:text="1"
               />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCLASS"
                android:layout_weight="1"
                android:entries="@array/query_classes" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="RD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbRD"
                android:checked="true" />

            <CheckBox
                android:text="CD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbCD" />

            <CheckBox
                android:text="DO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbDO"
                android:layout_weight="0.06" />

            <CheckBox
                android:text="TCP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbTCP"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:text="Query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="queryButtonClicked" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtResult"
            android:inputType="none" />

    </LinearLayout>
</RelativeLayout>
