<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dnsform"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="androdns.android.leetdreams.ch.androdns.DNSFormActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="QNAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblQNAME"
            android:contentDescription="www.example.com" />

        <EditText
            android:id="@+id/txtQname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="www.example.com"
            android:inputType="text"
            />

        <TextView
            android:text="Server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblServer" />

        <EditText
            android:id="@+id/txtServerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="DNS server, leave empty for system resolver"
            android:inputType="text"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerKnownTypes"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtQTYPE"
                android:layout_weight="1"
                android:text="1"
               />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCLASS"
                android:layout_weight="1"
                android:entries="@array/query_classes" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="RD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbRD"
                android:checked="true" />

            <CheckBox
                android:text="CD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbCD" />

            <CheckBox
                android:id="@+id/cbDO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DO" />

            <CheckBox
                android:text="TCP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbTCP"
           />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="queryButtonClicked"
                android:text="Query" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbaAA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="AA" />

            <CheckBox
                android:id="@+id/cbaTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="TC" />

            <CheckBox
                android:id="@+id/cbaRD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="RD" />

            <CheckBox
                android:id="@+id/cbaRA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="RA" />

            <CheckBox
                android:id="@+id/cbaAD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="AD" />

            <CheckBox
                android:id="@+id/cbaCD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="CD" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/txtStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textIsSelectable="true"
                android:ellipsize="none"
                android:scrollHorizontally="true" />

        </HorizontalScrollView>


    </LinearLayout>
</RelativeLayout>
